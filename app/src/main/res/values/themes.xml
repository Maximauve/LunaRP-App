<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LunaRP" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_bg_3</item>
        <item name="colorPrimaryVariant">@color/color_bg_2</item>
        <item name="colorOnPrimary">@color/color_accent</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_bg_4</item>
        <item name="colorSecondaryVariant">@color/color_bg_2</item>
        <item name="colorOnSecondary">@color/color_bg_1</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/color_light</item>
        <item name="android:textColorHint">@color/color_light</item>
        <item name="android:toolbarStyle">@color/color_accent</item>
        <item name="android:colorError">@color/color_error</item>
    </style>

    <style name="Theme.LunaRP.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.LunaRP.Page">
        <item name="android:textColorPrimary">@color/color_light</item>
        <item name="android:textColorSecondary">@color/color_light</item>
        <item name="android:textViewStyle">@color/color_accent</item>
        <item name="android:textColor">@color/color_light</item>
    </style>

    <style name="Theme.LunaRP.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_bg_3</item>
        <item name="colorPrimaryVariant">@color/color_bg_2</item>
        <item name="colorOnPrimary">@color/color_accent</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_bg_4</item>
        <item name="colorSecondaryVariant">@color/color_bg_2</item>
        <item name="colorOnSecondary">@color/color_bg_1</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.LunaRP.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>