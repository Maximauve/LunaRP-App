<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_bg_2"
    tools:context=".character.creation.CreateCharacter_Global"
    android:theme="@style/Theme.LunaRP.Page">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_bg_2"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:text="Annuler"
                tools:layout_editor_absoluteX="16dp" />


            <Button
                android:id="@+id/next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:text="Suivant"
                tools:layout_editor_absoluteX="16dp" />
        </LinearLayout>

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:textAlignment="viewStart"
            android:textColor="@color/color_light"
            android:textColorHint="@color/color_light"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_select_race"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Race"
                android:textSize="12dp" />

            <Spinner
                android:id="@+id/spinner_race"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/color_light"
                android:popupBackground="@color/color_bg_3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_select_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Classe"
                android:textSize="12dp" />

            <Spinner
                android:id="@+id/spinner_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/color_light"
                android:popupBackground="@color/color_bg_3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_select_alignment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Alignement"
                android:textSize="12dp" />

            <Spinner
                android:id="@+id/spinner_alignment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/color_light"
                android:popupBackground="@color/color_bg_3" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_strenght"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="For."
                        android:textSize="12dp" />

                    <NumberPicker
                        android:id="@+id/nbp_strenght"
                        android:layout_width="wrap_content"
                        android:layout_height="75dp"
                        android:scaleX="0.75"
                        android:scaleY="0.75"
                        android:scrollbarSize="4dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_intelligence"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Int."
                        android:textSize="12dp" />

                    <NumberPicker
                        android:id="@+id/nbp_intelligence"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleX="0.75"
                        android:scaleY="0.75" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_dexterity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dex."
                        android:textSize="12dp" />

                    <NumberPicker
                        android:id="@+id/nbp_dexterity"
                        android:layout_width="wrap_content"
                        android:layout_height="75dp"
                        android:background="#00000000"
                        android:scaleX="0.75"
                        android:scaleY="0.75" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_wisdom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sagesse"
                        android:textSize="12dp" />

                    <NumberPicker
                        android:id="@+id/nbp_wisdom"
                        android:layout_width="wrap_content"
                        android:layout_height="75dp"
                        android:scaleX="0.75"
                        android:scaleY="0.75" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_constitution"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cons."
                        android:textSize="12dp" />

                    <NumberPicker
                        android:id="@+id/nbp_constitution"
                        android:layout_width="wrap_content"
                        android:layout_height="75dp"
                        android:scaleX="0.75"
                        android:scaleY="0.75"
                        android:scrollbarSize="1dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_charisma"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Charisme"
                        android:textSize="12dp" />

                    <NumberPicker
                        android:id="@+id/nbp_charisma"
                        android:layout_width="wrap_content"
                        android:layout_height="75dp"
                        android:scaleX="0.75"
                        android:scaleY="0.75" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_bg_2"
                android:hint="Description..."
                android:textColor="@color/color_light" />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>


</FrameLayout>