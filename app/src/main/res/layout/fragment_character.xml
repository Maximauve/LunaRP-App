<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.CharacterFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:foregroundGravity="center_vertical|center|center_horizontal"
            android:text="All Characters"
            android:textColor="@color/color_accent"
            android:textSize="34sp" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardAddCharacter"
            cardCornerRadius="5dp"
            cardElevation="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:backgroundTint="@color/color_bg_3">

            <LinearLayout
                android:id="@+id/main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00930A0A"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="132dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageViewAdd"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        tools:srcCompat="@drawable/baseline_person_grey"
                        tools:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:gravity="center"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/tvCreate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:defaultFocusHighlightEnabled="false"
                        android:editable="false"
                        android:ems="10"
                        android:enabled="false"
                        android:gravity="center_horizontal"
                        android:inputType="textPersonName"
                        android:text="CrÃ©er un personnage"
                        android:textAllCaps="false"
                        android:textColor="@color/color_accent"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:itemCount="2"
            tools:listitem="@layout/row_character">

        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>



</FrameLayout>